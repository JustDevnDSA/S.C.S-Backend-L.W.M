<%include ./partials/header.ejs%>

<div class="w-full bg-[url('https://images.unsplash.com/photo-1568535904307-f48b760a39f3?q=80&w=1631&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] h-screen flex items-center justify-center">
    <div class=" bg-white px-20 py-10 rounded-[25px] ">
      <div class="flex flex-col justify-center items-center gap-3 mb-10">
        <img src="https://upload.wikimedia.org/wikipedia/commons/0/08/Pinterest-logo.png" class="w-12" alt="">
        <h1 class="text-3xl text-center font-semibold  capitalize leading-none -mb-4">Register to Pinterest</h1>
      </div>
     
      <form action="/register" method="post" class="space-y-4">
        <input class="block border-2 rounded-md  w-full mt-2  px-3 py-2 " type="text" name="username" placeholder="Username">
        <input class="block border-2 rounded-md  w-full mt-2  px-3 py-2 " type="text" name="name" placeholder="Name">
        <input class="block border-2 rounded-md  w-full mt-2  px-3 py-2 " type="email" name="email" placeholder="Email">
        <input class="block border-2 rounded-md  w-full mt-2  px-3 py-2 " type="number" name="contact" placeholder="Contact">
        <input class="block border-2 rounded-md w-full mt-2  px-3 py-2 " type="password" name="password" placeholder="Password">
        <input class="block w-full  mt-2 px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Register">
      </form>
      <span class="mt-6  block  text-start text-gray-500">Already have an account ? <a href="/" class="hover:underline">Login</a></span>
    </div>
  </div>

<% include ./partials/footer.ejs %>